/* pages/search/search.wxss */
.search-wrapper {
  padding: 20rpx 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-bar {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 17rpx;
  background-color: #F0F0F0;
  border-radius: 10rpx;
  font-size: 0;
  overflow: hidden;
}
.search-bar image {
  width: 34rpx;
  height: 34rpx;
}
.search-bar image.del {
  width: 30rpx;
  height: 30rpx;
}
.search-bar input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 12rpx;
}
.search-text {
  padding-left: 30rpx;
  font-size: 32rpx;
  color: #CD3F3F;
}
.log-title {
  font-size: 28rpx;
  color: #BEBEBE;
  padding: 40rpx 30rpx 30rpx;
}
.log-list {
  padding: 0 10rpx 0 30rpx;
}
.list-item {
  display: inline-block;
  padding: 14rpx 34rpx;
  font-size: 28rpx;
  color: #3D3F4C;
  background-color: #F7F7F7;
  margin: 0 20rpx 20rpx 0;
}
.clear-log {
  text-align: center;
}
.clear-log image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.clear-log text {
  font-size: 28rpx;
  color: #BEBEBE;
  vertical-align: middle;
}
.class-list {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 30rpx 0;
}
.class-list .my-class {
  padding: 0 0 30rpx;
  margin-bottom: 30rpx;
  box-shadow: none;
  border-bottom: 1px solid #E5E5E5;
  border-radius: 0;
}
.class-list .my-class:last-child {
  border-bottom: 0;
}
.class-list > .title {
  font-size: 34rpx;
  color: #3D3F4C;
  margin-bottom: 40rpx;
}

.my-class .card-wrapper {
  display: flex;
  justify-content: space-between;
}
.my-class .card-wrapper image {
  flex: 1;
  max-height: 130rpx;
  border: 1px solid #9CA8BD;
  border-radius: 5rpx;
}
.my-class .card-wrapper .desc {
  flex: 4;
  padding-left: 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
  /* flex-direction: column; */
  /* justify-content: space-around; */
}
.my-class .card-wrapper .desc > .title {
  font-size: 32rpx;
  color: #3D3F4C;
  line-height: 1;
}
.my-class .card-wrapper .desc > .subtitle {
  font-size: 30rpx;
  color: #9CA8BD;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1;
  flex-basis: 100%;
  width: 0;
}