/* pages/center/focus/focus.wxss */
scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
}
.list {
  padding: 0 30rpx;
}
.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #E5E5E5;
}
.list .list-item:last-child {
  border-bottom: 0;
}
.list-item > .info {
  font-size: 0;
}
.list-item > .info > image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.list-item > .info > view {
  display: inline-block;
  font-size: 0;
  margin-left: 30rpx;
  vertical-align: middle;
}
.list-item > .info .name {
  font-size: 32rpx;
  color: #3D3F4C;
  line-height: 1;
  margin-bottom: 24rpx;
}
.subinfo > view {
  display: inline-block;
  line-height: 1;
  padding-right: 20rpx;
  border-right: 1px solid #9CA8BD;
  font-size: 26rpx;
  color: #9CA8BD;
  margin-right: 20rpx;
}
.unfocus {
  padding: 10rpx 20rpx;
  border: 1px solid #9CA8BD;
  line-height: 1;
  border-radius: 10rpx;
}
.unfocus image {
  width: 18rpx;
  height: 18rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.unfocus text {
  font-size: 28rpx;
  color: #9CA8BD;
  line-height: 1;
  vertical-align: middle;
}