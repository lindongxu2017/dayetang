/* pages/center/infomation/edit/edit.wxss */
page {
  background-color: #fff;
}
.textarea {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 0;
}
textarea {
  width: 100%;
  min-height: 400rpx;
  background-color: #F4F4F4;
  padding: 20rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.custom-btn {
  margin-top: 100rpx;
  padding: 0 30rpx;
}
.custom-btn text {
  display: block;
  border-radius: 6rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background-color: #CD3F3F;
}