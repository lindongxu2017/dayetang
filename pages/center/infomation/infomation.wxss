/* pages/center/infomation/infomation.wxss */
page {
  background-color: #F8F8F8;
  padding-bottom: 60rpx;
}
.title {
  padding: 22rpx 30rpx;
  font-size: 28rpx;
  color: #9CA8BD;
  background-color: #F8F8F8;
}
.cell-area {
  padding: 0 30rpx;
  background-color: #fff;
}
.cell-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: 1px solid #D2D2D2;
}
.cell-area .cell-item:last-child {
  border-bottom: 0;
}
.cell-item.cell-avatar {
  padding: 14rpx 0;
}
.cell-avatar image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}
.cell-title {
  font-size: 30rpx;
  color: #3D3F4C;
}
.cell-value {
  flex: 1;
  margin-left: 30rpx;
  text-align: right;
  font-size: 30rpx;
  color: #9CA8BD;
  min-height: 20px;
}
.cell-value.tag {
  flex-basis: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cell-value.company-desc {
  flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cell-value.company-desc text {
  white-space: nowrap;
}
.arrow-right {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}
.cell-item.referee {
  padding: 36rpx 30rpx;
  background-color: #fff;
  margin-top: 18rpx;
  border-bottom: 0;
}