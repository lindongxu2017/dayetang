/* pages/center/rank/rank.wxss */
page {
  background-color: #f8f8f8;
}
.placeholder {
  height: 90rpx;
  background-color: #CD3F3F;
}
scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
}
.list {
  padding: 0 30rpx;
  z-index: 1;
  position: relative;
  margin-top: -40rpx;
}
.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1px solid #E5E5E5;
  background-color: #fff;
}
.list .list-item:first-child {
  border-top-left-radius: 5rpx;
  border-top-right-radius: 5rpx;
}
.list .list-item:last-child {
  border-bottom-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  border-bottom: 0;
}
.list-item > .info {
  font-size: 0;
}
.list-item > .info > image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.list-item > .info > view.avatar-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
  border: 1px solid #E5E5E5;
  margin-left: 0;
  position: relative;
  padding: 7rpx;
  font-size: 0;
}
.avatar-wrapper image.avatar {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}
.avatar-wrapper image.crown {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -10rpx;
  top: -24rpx;
}

.list-item > .info > view {
  display: inline-block;
  font-size: 0;
  margin-left: 30rpx;
  vertical-align: middle;
}
.list-item > .info > view.rank-level {
  font-size: 36rpx;
  color: #333333;
  margin-left: 0;
  margin-right: 26rpx;
}
.list-item > .info .name {
  font-size: 32rpx;
  color: #3D3F4C;
  line-height: 1;
  margin-bottom: 24rpx;
}
.subinfo > view {
  display: inline-block;
  line-height: 1;
  padding-right: 20rpx;
  border-right: 1px solid #9CA8BD;
  font-size: 26rpx;
  color: #9CA8BD;
  margin-right: 20rpx;
}
.subinfo > view:last-child {
  border-right: 0;
}
.start-num {
  font-size: 0;
}
.start-num > view:first-child {
  font-size: 32rpx;
  color: #E5C355;
  margin-bottom: 10rpx;
  text-align: center;
}
.start-num > view:last-child {
  font-size: 24rpx;
  color: #9CA8BD;
  text-align: center;
}
.loading {
  margin-top: 80rpx;
  padding-bottom: 60rpx;
}