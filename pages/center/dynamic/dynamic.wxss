page {
  background-color: #F8F8F8;
}
scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
}
.list-item-wrapper {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.list-item-content {
  overflow: hidden;
}
.card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.avatar-name image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
}
.avatar-name text {
  font-size: 30rpx;
  color: #3D3F4C;
  vertical-align: middle;
}
.card-head .time {
  font-size: 28rpx;
  color: #3D3F4C;
}
.card-title {
  font-size: 30rpx;
  color: #9CA8BD;
  margin-bottom: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.card-title text {
  color: #CD3F3F;
}
.card-body {
  font-size: 0;
}
.card-body > image {
  width: calc(33.3333333333% - 15rpx);
  height: 60px;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.card-footer {
  padding: 5rpx 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card-footer .browse {
  font-size: 28rpx;
  color: #9CA8BD;
}
.card-footer .operation {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}
.card-footer .operation .mask {
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 10rpx;
  background-color: #fff;
  z-index: 1;
}
.card-footer .operation image {
  width: 40rpx;
  height: 40rpx;
}
.card-footer .lower {
  display: inline-block;
  position: absolute;
  height: 100%;
  padding: 14rpx 20rpx 4rpx;
  background-color: #707785;
  border-radius: 6rpx;
  left: 0;
  font-size: 0;
  transition: all 0.25s ease;
  white-space: nowrap;
}
.card-footer .lower.show {
  left: -262rpx;
}
.lower .cell {
  display: inline-block;
  vertical-align: baseline;
  white-space: nowrap;
  line-height: 1;
}
.lower .cell:first-child {
  padding-right: 15rpx;
  margin-right: 15rpx;
  border-right: 1px solid #616774;
}
.lower .cell image,
.lower .cell text {
  vertical-align: middle;
}
.lower .cell image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 7rpx;
  display: inline-block;
}
.lower .cell text {
  font-size: 28rpx;
  color: #fff;
  line-height: 1;
  display: inline-block;
}
.reply-list {
  background-color: #f5f6f7;
  position: relative;
  padding: 0 20rpx 20rpx;
  border-radius: 4rpx;
}
.reply-list.no-pad {
  padding-bottom: 0;
}
.reply-list::after {
  content: '';
  position: absolute;
  top: -10px;
  width: 0;
  border: 5px solid;
  border-color: transparent transparent #F6F6F6;
}
.reply-item {
  padding: 10rpx 0 0;
}
.reply-list .reply-item:last-child {
  border-bottom: 0;
}
.reply-item text {
  font-size: 30rpx;
  color: #9CA8BD;
}
.reply-item text .reply-tetx {
  color: #3D3F4C;
}
.reply-item .blue {
  color: #6EAFF1;
}
.support-list {
  font-size: 0;
  padding: 20rpx 0 0;
  border-bottom: 1px solid #E5E5E5;
}
.support-list.no-border {
  border-bottom: 0;
}
.support-list image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  vertical-align: middle;
  margin-bottom: 20rpx;
}
.support-list image.avatar {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  vertical-align: middle;
}

.addDynamic {
  position: fixed;
  right: 30rpx;
  bottom: 15%;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  line-height: 70rpx;
  font-size:  60rpx;
  color: #fff;
  text-align: center;
  background-color: #CD3F3F;
  z-index: 2;
}
.message {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  border-top: 1px solid #E1E2E6;
  background-color: #fff;
  z-index: 2;
}
.message .input-wrapper {
  flex: 1;
  padding: 17rpx 20rpx;
  background-color: #F6F6F6;
  margin-right: 30rpx;
  border-radius: 6rpx;
}
.message .input-wrapper input {
  height: 30rpx;
  min-height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  white-space: pre-wrap;
}
.send-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background-color: #CD3F3F;
  color: #fff;
  border-radius: 6rpx;
}