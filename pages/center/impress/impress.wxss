/* pages/center/impress/impress.wxss */
.hexagon-wrapper {
  position: relative;
  height: 450px;
}
.hexagon-wrapper .item {
  position: absolute;
  width: 160rpx;
  font-size: 0;
  display: inline-block;
  margin-right: 10rpx;
}
.single {
  width: 100%;
  height: 80rpx;
  background-color: transparent;
  position: relative;
}
.single::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  border-width: 40rpx 80rpx;
  border-style: solid;
  border-color: transparent;
}
.top.single::after {
  border-bottom-color: rgba(224,182,144,1);
}
.bottom.single::after {
  border-top-color: rgba(224,182,144,1);
}
.middle-content {
  width: 100%;
  height: 90rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background-color: rgba(224,182,144,1);
}