/* pages/classDetail/memberDetail/activityList/activityList.wxss */
scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
}
.list-wrapper {
  padding: 30rpx 30rpx 65rpx;
  background-color: #fff;
}
.card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.avatar-name image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
}
.avatar-name text {
  font-size: 30rpx;
  color: #3D3F4C;
  vertical-align: middle;
}
.card-head .time {
  font-size: 28rpx;
  color: #3D3F4C;
}
.list-item {
  font-size: 0;
  margin-bottom: 65rpx;
}
.list-wrapper .list-item:last-child {
  margin-bottom: 0;
}
.list-item > image {
  width: 100%;
  margin-bottom: 18rpx;
}
.list-item .subtitle {
  font-size: 34rpx;
  color: #303336;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.list-item .title {
  font-size: 30rpx;
  color: #303336;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.list-item .title.activity {
  font-size: 34rpx;
}
.list-item .title.sub {
  color: #9CA8BD;
}
.list-item .title text {
  color: #6EAFF1;
}
.flex-sub-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-sub-info .time {
  font-size: 26rpx;
  color: #9CA8BD;
}
.flex-sub-info .date {
  font-size: 0;
}
.flex-sub-info .date image,
.flex-sub-info .browse image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}
.flex-sub-info .date text,
.flex-sub-info .browse text {
  font-size: 26rpx;
  color: #9CA8BD;
  vertical-align: middle;
}