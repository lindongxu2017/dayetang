page {
  background-color: #f8f8f8;
}
scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
}
swiper {
  height: 50vw;
}
swiper image {
  width: 100%;
  height: 100%;
}
.banner-wrapper {
  position: relative;
}
.search-bar-wrapper {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
picker, .picker {
  display: inline-block;
  font-size: 28rpx;
  color: #fff;
  height: auto;
  border-radius: 10rpx;
}
.picker > text {
  vertical-align: middle;
  margin-right: 10rpx;
} 
.picker > image {
  width: 30rpx;
  height: auto;
  vertical-align: middle;
}
.picker {
  margin-right: 10rpx;
  padding: 0 20rpx;
  background-color: rgba(73,73,73,0.5);
}
.search-icon {
  display: inline-block;
  background-color: rgba(73,73,73,0.5);
  border-radius: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.search-bar-wrapper image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.search-bar-wrapper text {
  font-size: 28rpx;
  vertical-align: middle;
  color: #fff;
}
.main-conetnt {
  position: absolute;
  width: 100%;
  padding: 0 30rpx 30rpx;
  z-index: 1;
  margin-top: -50rpx;
}
.my-class {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 10rpx rgba(73,73,73,0.1);
}
.my-class > .title {
  font-size: 34rpx;
  margin-bottom: 40rpx;
}
.my-class .card-wrapper {
  display: flex;
  justify-content: space-between;
}
.my-class .card-wrapper image {
  flex: 1;
  max-height: 130rpx;
  border-radius: 5rpx;
}
.my-class .card-wrapper .desc {
  flex: 4;
  padding-left: 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
  /* flex-direction: column; */
  /* justify-content: space-around; */
}
.my-class .card-wrapper .desc > .title {
  font-size: 32rpx;
  color: #3D3F4C;
  line-height: 1;
}
.my-class .card-wrapper .desc > .subtitle {
  font-size: 30rpx;
  color: #9CA8BD;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1;
  flex-basis: 100%;
  width: 0;
}
.class-list {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 30rpx 0;
}
.class-list .my-class {
  padding: 0 0 30rpx;
  margin-bottom: 30rpx;
  box-shadow: none;
  border-bottom: 1px solid #E5E5E5;
  border-radius: 0;
}
.class-list .my-class:last-child {
  border-bottom: 0;
}
.class-list > .title {
  font-size: 34rpx;
  color: #3D3F4C;
  margin-bottom: 40rpx;
}
.loading {
  margin-top: 100rpx;
}
.noMore  {
  padding-top: 80rpx;
}