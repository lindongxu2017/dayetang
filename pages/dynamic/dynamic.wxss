/* pages/dynamic/dynamic.wxss */
/* pages/classDetail/memberDetail/dynamicList/dynamicList.wxss */
page {
  background-color: #F8F8F8;
}
scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
}
.search-wrapper {
  padding: 30rpx 30rpx 0;
  background-color: #fff;
}
.search-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #F0F0F0;
  border-radius: 5rpx;
  padding: 10rpx 18rpx;
}
.search-bar input {
  font-size: 28rpx;
  color: #9CA8BD;
  flex: 3;
}
 
.search-bar .icon-wrapper {
  display: inline-block;
  transition: all 0.2s ease;
}
.search-bar .icon-wrapper.isFocus {
  flex: 2;
  text-align: right;
}
.search-bar image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}
.search-tip text {
  font-size: 28rpx;
  color: #9CA8BD;
}
.tab-list {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
  white-space: nowrap;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
}
.tab-list > view {
  display: inline-block;
  font-size: 28rpx;
  color: #9CA8BD;
  margin-right: 40rpx;
}
.tab-list > view.active {
  color: #3D3F4C;
  font-size: 34rpx;
}
.list-item-wrapper {
  padding: 30rpx 30rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.list-item-wrapper .card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.list-item-wrapper .avatar-name image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
}
.list-item-wrapper .avatar-name text {
  font-size: 30rpx;
  color: #3D3F4C;
  vertical-align: middle;
}
.list-item-wrapper .card-head .time {
  font-size: 28rpx;
  color: #3D3F4C;
}
.list-item-wrapper .card-title {
  font-size: 30rpx;
  color: #9CA8BD;
  margin-bottom: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list-item-wrapper .card-title text {
  color: #6EAFF1;
}
.list-item-wrapper .card-body {
  font-size: 0;
}
.list-item-wrapper .card-body > image {
  width: calc(33.3333333333% - 15rpx);
  height: 140rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.list-item-wrapper .card-footer {
  padding: 5rpx 0 20rpx;
}
.list-item-wrapper .card-footer .block {
  display: inline-block;
  margin-right: 30rpx;
}
.list-item-wrapper .card-footer .block image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.list-item-wrapper .card-footer .block text {
  font-size: 26rpx;
  color: #9CA8BD;
  vertical-align: middle;
}

.list-wrapper > .list-item {
  padding: 30rpx;
  background-color: #fff;
}
.list-wrapper .card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.list-wrapper .avatar-name image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
}
.list-wrapper .avatar-name text {
  font-size: 30rpx;
  color: #3D3F4C;
  vertical-align: middle;
}
.list-wrapper .card-head .time {
  font-size: 28rpx;
  color: #3D3F4C;
}
.list-wrapper .list-item {
  font-size: 0;
  margin-bottom: 20rpx;
}
.list-wrapper .list-item:last-child {
  margin-bottom: 0;
}
.list-wrapper .list-item > image {
  width: 100%;
  margin-bottom: 18rpx;
}
.list-wrapper .list-item .subtitle {
  font-size: 34rpx;
  color: #303336;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.list-wrapper .list-item .title {
  font-size: 30rpx;
  color: #303336;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.list-wrapper .list-item .title.activity {
  font-size: 34rpx;
}
.list-wrapper .list-item .title.sub {
  color: #9CA8BD;
}
.list-wrapper .list-item .title text {
  color: #6EAFF1;
}
.list-wrapper .flex-sub-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-wrapper .flex-sub-info .time {
  font-size: 26rpx;
  color: #9CA8BD;
}
.list-wrapper .flex-sub-info .date {
  font-size: 0;
}
.list-wrapper .flex-sub-info .date image,
.list-wrapper .flex-sub-info .browse image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}
.list-wrapper .flex-sub-info .date text,
.list-wrapper .flex-sub-info .browse text {
  font-size: 26rpx;
  color: #9CA8BD;
  vertical-align: middle;
}